<div class="pet-new container d-flex justify-content-center py-5">
  <div class="rounded-3 p-3 text-bg-light shadow p-3 mb-5 bg-body-tertiary rounded" style="color: black">
    <%# <h2>Welcome </h2> %>
    <div class="d-flex">
      <div class="d-flex justify-content-center align-items-center rounded-circle" style="width:100px; height: 100px; box-shadow: 0 0 5px #FE8D36;">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag(current_user.photo.key, class: "user-photo-available") %>
        <% else %>
          <i class="fa-solid fa-user user-photo-unavailable"></i>
        <% end %>
      </div>
      <div class="d-flex justify-content-center align-items-center flex-fill">
        <h1><%= current_user.first_name%> <%= current_user.last_name %></h1>
      </div>
    </div>
    <br>
    <h4>Personal info</h4>
    <hr>
    <p class="fw-semibold" style="display:inline;">Email:</p> <p><%= current_user.email %></p>
    <p class="fw-semibold" style="display:inline;">Phone:</p> <p><%= current_user.phone_number %></p>
    <p class="fw-semibold" style="display:inline;">Address:</p> <p><%= current_user.address %></p>
    <div class="d-flex justify-content-evenly mb-4 mt-4">
      <%= link_to "Edit", edit_user_registration_path, class: "orange-btn"%>
      <%= link_to "See my pets", "/pets", class: "orange-btn"%>
    </div>

    <% if @veterinary.present? %>
    <h4>Professional info </h4>
    <hr>
    <p class="fw-semibold" style="display:inline;">DNI</p> <p><%= @veterinary.dni %></p>
    <p class="fw-semibold" style="display:inline;">Specialization</p> <p><%= @veterinary.specialization %></p>
    <div class="d-flex justify-content-evenly mb-4 mt-4">
    <%= link_to "Edit", edit_veterinary_path(@veterinary), class: "orange-btn"%>
      <%= link_to "See my services", "/services", class: "orange-btn"%>
    </div>
    <% end %>
    <hr>
    <div class="d-flex justify-content-evenly">
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "orange-btn" %>
    </div>
  </div>
</div>
