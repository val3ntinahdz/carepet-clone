<div class="scheduled-appointments-container">
  <div class="p-3">
    <%= link_to "", request.referer, class: "navpet fa-solid fa-circle-chevron-left fa-xl text-decoration-none" %>
  </div>
  <h1 class="appointments-title">Your Appointments 🐾</h1>
  <% if current_user.veterinary.present? %>
    <%= render 'appointments_section', title: 'Scheduled Appointments', appointments: @veterinary_appointments, show_cancel_button: false %>
  <% else %>
    <%= render 'appointments_section', title: 'Upcoming', appointments: @upcoming_appointments, show_cancel_button: true %>
    <%= render 'appointments_section', title: 'Past', appointments: @past_appointments.first(3), show_cancel_button: false %>

    <% unless @past_appointments.size < 3 %>
      <div class="see-all-link">
        <%= link_to "See All", "#" %>
      </div>
    <% end %>
  <% end %>
</div>
