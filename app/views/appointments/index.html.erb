<div class="scheduled-appointments-container">
  <div class="appointments-banner">
    <h1 class="appointments-title text-center mt-3">Appointments</h1>
  </div>
  <% if current_user.veterinary.present? %>
    <div class="veterinary-appointments">
      <%= render 'appointments_section', title: 'Scheduled Appointments', appointments: @veterinary_appointments %>
    </div>
  <% else %>
    <div class="upcoming-appointments">
      <%= render 'appointments_section', title: 'Upcoming', appointments: @upcoming_appointments, class: "mt-3" %>
    </div>
    <div class="past-appointments">
      <%= render 'appointments_section', title: 'Past', appointments: @completed_appointments.first(3) %>
    </div>
    <% unless @completed_appointments.size < 3 %>
      <div class="see-all-link">
        <%= link_to "See All", "#" %>
      </div>
    <% end %>
  <% end %>
</div>
