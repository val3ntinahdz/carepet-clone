<div class="container m-5">
  <div class="p-3">
    <%= link_to "", request.referer, class: "nav-pet fa-solid fa-circle-chevron-left fa-xl text-decoration-none" %>
  </div>

  <h5>Reschedule Appointment!</h5>

  <%= form_with(model: @appointment, url: appointment_path(@appointment), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :current_datetime, "Current Date and Time:", class: "form-label" %>
      <p><%= @appointment.datetime.strftime("%m/%d/%Y - %H:%M") %></p>
    </div>

    <div class="form-group">
      <%= form.label :datetime, "Select New Date and Time:", class: "form-label" %>
      <%= form.datetime_select :datetime, class: "form-control", required: true, min: Time.now.strftime("%Y-%m-%dT%H:%M") %>
      <div class="invalid-feedback">
        Please select a new date and time.
      </div>
    </div>

    <div class="form-group">
      <%= form.submit "Reschedule", class: "orange-btn" %>
    </div>
  <% end %>
</div>
