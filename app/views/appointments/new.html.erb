<div class="petnew container d-flex justify-content-center py-5">
  <div class="rounded-3 p-3 text-bg-light shadow p-3 mb-5 bg-body-tertiary rounded" style="color: black">
    <div class="m-3 text-center", style="color: black"><h2>Book an appointment</h2></div>
    <%= render 'calendar' %>
    <%= simple_form_for [@service, @appointment], data: { controller: 'flatpickr' } do |f| %>
      <%= f.input :datetime, as: :string, input_html: { data: { date_target: "date" } }%>
      <%= f.input :reason, class: 'form-control' %>
      <%= f.input :comments, class: 'form-control' %>
      <%= f.input :pet_id, as: :select, collection: current_user.pets.map { |p| [p.name, p.id] }, include_blank: "Select a pet", class: 'form-select' %>
      <%= f.submit "Book", class: "btn btn-primary orange-btn" %>
    <% end %>
  </div>
</div>

# as: :string, input_html: { data: { flatpickr_target: "date" } } is added to the datetime input field to use the flatpickr date picker.
