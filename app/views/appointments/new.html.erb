<div class="container d-flex justify-content-center py-5">
  <div class="rounded-3 p-3 text-bg-light shadow p-3 mb-5 bg-body-tertiary rounded" style="color: black">
    <div class="m-3 text-center", style="color: black"><h2>Book an appointment</h2></div>
    <%= render 'calendar', appointments: @appointments %>
    <%= simple_form_for [@service, @appointment], data: { controller: 'flatpickr' } do |f| %>
      <%= f.input :datetime, as: :string, input_html: { class: "datetime" } %>
      <%= f.input :reason %>
      <%= f.input :comments %>
      <%= f.input :pet_id, as: :select, collection: current_user.pets.map { |p| [p.name, p.id] }, include_blank: "Select a pet", class: 'form-select' %>
      <%= f.submit "Book", class: 'orange-btn'%>
    <% end %>
  </div>
</div>
