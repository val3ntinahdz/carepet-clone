<div class="appointment-container m-5">
  <div class="appointment-details">
      <%= form_with(model: @appointment, url: appointment_path(@appointment), method: :patch) do |form| %>
        <div class="form-group">
          <%= form.label :datetime, "Select New Date and Time:", class: "form-label" %>
          <%= form.datetime_select :datetime, class: "form-control", required: true, min: Time.now.strftime("%Y-%m-%dT%H:%M") %>
          <div class="invalid-feedback">
            Please select a new date and time.
          </div>
        </div>

        <div class="form-group mt-3">
          <%= form.submit "Reschedule", class: "orange-btn" %>
        </div>
      <% end %>
  </div>
</div>
