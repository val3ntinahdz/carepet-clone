<div data-controller="reschedule-form" data-reschedule-form-target="rescheduleForm" class="appointment-container m-5">
  <div class="appointment-details">
    <%= form_with(model: @appointment, url: appointment_path(@appointment), method: :patch) do |form| %>
        <div class="form-group">
          <%= form.label :datetime, "Select New Date and Time:", class: "form-label" %>
          <%= form.datetime_local_field :datetime, class: "form-control", required: true, min: DateTime.now.strftime("%Y-%m-%dT%H:%M"), max: DateTime.new(2025, 12, 31, 23, 59).strftime("%Y-%m-%dT%H:%M") %>
          <div class="invalid-feedback">
            Please select a new date and time.
          </div>
        </div>

        <div class="form-group mt-3">
          <%= form.submit "Save", class: "orange-btn", data: { action: "reschedule-form#hideForm" } %>
        </div>
    <% end %>
  </div>
</div>
